extends layouts/default

block vars
    - var bodyClass = 'purchase confirmation';

block title
    title Confirmation
    
block nav
    nav.menu.menu-header
        .menu-icon
            span
        ul.menu-list
            li.menu-item
                a.toggle-lightbox.app-link(href='#') Get the App
    
    

block content
    .content
        .container
            .content-wrapper
                .content-sidebar
                    h1 Order details
                    .order
                        .order-product
                            img(src="images/edyn_sensor_thumbnail_2x.png", alt="", width="200", height="200")
                            h2 Edyn garden sensor
                            span.order-price $99.99
                        table.order-summary
                            tbody
                                tr
                                    td Subtotal
                                    td $99.99
                                tr
                                    td Standard shipping
                                    td $5.62
                                tr
                                    td Tax
                                    td $5.62
                            tfoot
                                tr
                                    td Total
                                    td $111.23
                    
                .content-main
                    h2 Your order has been placed!
                    h3 Order number 788x2cb5
                    p 
                        | We’re processing your order and we’ll send you an email when it’s ready. For now, you can download the Edyn App and start tracking your plants.
                    p
                        | Download for iOS or Android:
                    a(class="button button-inverted button-app", href="#") Download the Edyn App
                    .app
                        a.button-appstore-outline(href='https://itunes.apple.com/us/app/edyn/id939748941?mt=8', target='_blank') Download from the App Store
                        a.button-googleplay-outline(href='https://play.google.com/store/apps/details?id=com.edyn.apps.edyn', target='_blank') Get it on Google play
                    h1 Order details
                    .order
                        .order-product
                            img(src="images/edyn_sensor_thumbnail_2x.png", alt="", width="200", height="200")
                            h2 Edyn garden sensor
                            span.order-price $99.99
                        table.order-summary
                            tbody
                                tr
                                    td Subtotal
                                    td $99.99
                                tr
                                    td Standard shipping
                                    td $5.62
                                tr
                                    td Tax
                                    td $5.62
                            tfoot
                                tr
                                    td Total
                                    td $111.23
                    .address
                        h4 Shipping Address
                        p
                            |Nathan Van Nistelroy
                            br
                            |1214 Utah St.
                            br
                            |San Francisco CA 94159
                            br
                            |415 658 7213
                    .address
                        h4 Billing Address
                        p
                            |Nathan Van Nistelroy
                            br
                            |1214 Utah St.
                            br
                            |San Francisco CA 94159
                            br
                            |415 658 7213
                    hr.hidden.clearfix
                    a(class="button button-inverted", href="#") Back home   
                    hr.hidden.clearfix             
append footer
    include ./includes/lightbox.jade


