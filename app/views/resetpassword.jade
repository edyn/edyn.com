extends layouts/default

block vars
    - var bodyClass = 'page';

block title
    title Reset Password

block content
    .content
      .container
        .content-wrapper#reset-password
            form#forgot-password(method='POST')
              h2 Forgot Password
              p
                | Enter your email address and we'll send you a link to reset your password.

              fieldset
                .input-wrapper
                  label(for="forgot-password-email") Email Address
                  input.form-control#forgot-password-email(type="text", placeholder="email", name="forgot-password-email", data-validetta="required,email", data-vd-message-required="Email is required.", data-vd-message-email="Your email address appears to be invalid." autofocus="true")

              input(type="submit", value="Reset Password", name="forgot-password-submit", id="forgot-password-submit", class="button button-inverted" data-disabled-text="Hold On...")

            #forgot-password-success
              h2 Email sent
              p
                | Please check your email. If you didn't receive the message click #[a.forgot-password-retry here] to try again.

            #forgot-password-error
              h2 Error resetting password
              p
                | There was an error resetting your password. Click #[a.forgot-password-retry here] to try again or #[a(href="mailto:support@edyn.com?subject=Forgot%20password") contact support].

            form#update-password(method='POST')
              h2 Update Password
              p
                | Enter your new password below

              fieldset
                .input-wrapper
                  label(for="update-password-new-password") New Password
                  input.form-control#update-password-new-password(type="password", placeholder="new password", name="update-password-new-password", data-validetta="required,minLength[4]", data-vd-message-required="New password is required." autofocus="true")

                .input-wrapper
                  label(for="update-password-confirm-password") Confirm Password
                  input.form-control#update-password-confirm-password(type="password", placeholder="confirm password", name="update-password-confirm-password", data-validetta="required,callback[confirm]", data-vd-message-required="Confirmed password is required.")

              input(type="submit", value="Update Password", name="update-password-submit", id="update-password-submit", class="button button-inverted" data-disabled-text="Hold On...")

            #update-password-success
              h2 Password updated
              p
                | Your password has been successfully updated.

            #update-password-error
              h2 Error updating password
              p
                | There was an error updating your password. Click #[a#update-password-retry here] to try again or #[a(href="mailto:support@edyn.com?subject=Update%20password") contact support].


