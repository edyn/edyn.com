extends layouts/default

block vars
    - var bodyClass = 'purchase';

block title
    title Order

block nav
    nav.menu.menu-header
        .menu-icon
            span
        ul.menu-list
            li.menu-item
                a.toggle-lightbox.app-link.button(href='#') Get the App

block content
    .content
        .container
            .content-wrapper
                form#form(method="POST")
                    .content-sidebar
                        h1 Order Details
                        .order
                            .order-products
                              .order-product.order-product-template(data-device="")
                                  img.product-image(src="", alt="")
                                  h2.product-name
                                  span.order-price
                                  .order-product-ships
                                  .input-wrapper.input-number-count
                                      .input-count-wrapper
                                          input.form-control.input-count(type="text", value="0", name="input-count")
                                          .input-count-controls
                                              a.input-count-up(href="#")
                                                  i(class="icon icon-ui-arrow-up")
                                              a.input-count-down(href="#")
                                                  i(class="icon icon-ui-arrow-down")
                                              a.input-count-plus(href="#")
                                                  i(class="icon icon-ui-plus")
                                              a.input-count-minus(href="#")
                                                  i(class="icon icon-ui-minus")
                                          a.input-count-trash(href="#")
                                              i(class="icon icon-ui-trash")
                                      .input-select-count-wrapper
                                          select.form-control.input-select-count(name="input-select-count")
                            .coupon
                              .input-wrapper.input-coupon-wrapper
                                  label(for="input-coupon") Coupon Code?
                                  input.form-control#input-coupon(type="text", placeholder="Coupon Code?", name="input-coupon")
                                  span.validetta-bubble
                              .button-group.button-group-coupon
                                  button.button.button-outline.button-apply Apply
                                  button.button.button-outline.button-cancel Cancel

                            .order-summary-wrapper
                              .order-loader
                                .order-loader-text Updating...
                                .order-loader-spinner

                              table.order-summary
                                  tbody
                                      tr
                                          td Subtotal
                                          td.price-subtotal
                                      tr.line-discount
                                          td Coupon Discount
                                          td.price-discount
                                      tr
                                          td Shipping
                                          td.price-shipping
                                      tr
                                          td Tax
                                          td.price-tax
                                  tfoot
                                      tr
                                          td Total
                                          td.price-total

                        .products
                          .product.product-template
                            .product-name Name
                            .product-price $0.00
                            .product-add(data-device="") Add to Order
                            .product-soldout Sold Out
                            img.product-image(alt="")

                    .content-main
                        h2 1. Shipping Information
                        fieldset.shipping-info
